<!DOCTYPE html>
<html lang="en">
<head>
  <title>Canvas</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Bootstrap -->
  <link href="css/bootstrap.min.css" rel="stylesheet" media="screen">
  <link href="css/canvas.css" rel="stylesheet" media="screen">
</head>
<body>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
        <div class="canvas-logo text-center">
          <h1>KORORA<span>CANVAS</span></h1>
        </div>
        <ul class="nav nav-tabs nav-justified">
          <li class="active"><a class="muted" href="#login" data-toggle="tab">Login</a></li>
          <li><a class="muted" href="#forgot" data-toggle="tab">Forgot Password</a></li>
          <li><a class="" href="#signup" data-toggle="tab">Register</a></li>
        </ul>
        <div class="tab-content">
          <div id="login" class="tab-pane active">
            <form action="/authenticate" method="post" class="form-signin" role="form">
              <div class="form-group">
              </div>
              <div class="form-group">
                <div class="input-group">
                  <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                  <input name="u" type="text" class="form-control" placeholder="username">
                </div>
              </div>
              <div class="form-group">
                <div class="input-group">
                  <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                  <input name="p" type="password" class="form-control" placeholder="password">
                </div>
              </div>
              <div class="form-group">
                <button class="btn btn-large btn-primary btn-block" type="submit">Sign In</button>
              </div>
            </form>
          </div>
          <div id="forgot" class="tab-pane">
            <form action="index.html" class="form-signin" role="form">
              <div class="form-group">
              </div>
              <div class="form-group">
                <div class="input-group">
                  <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
                  <input type="email" class="form-control" placeholder="mail@domain.com" required="required">
                </div>
              </div>
              <div class="form-group">
                <button class="btn btn-large btn-danger btn-block" type="submit">Recover Password</button>
              </div>
            </form>
          </div>
          <div id="signup" class="tab-pane">
            <form action="index.html" class="form-signin" role="form">
              <div class="form-group">
              </div>
              <div class="form-group">
                <div class="input-group">
                  <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                  <input type="text" class="form-control" placeholder="username">
                </div>
              </div>
              <div class="form-group">
                <div class="input-group">
                  <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
                  <input type="email" class="form-control" placeholder="mail@domain.com">
                </div>
              </div>
              <div class="form-group">
                <div class="input-group">
                  <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                  <input type="password" class="form-control" placeholder="password">
                </div>
              </div>
              <div class="form-group">
                <button class="btn btn-large btn-success btn-block" type="submit">Register</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="js/jquery.js"></script>
  <script src="js/bootstrap.js"></script>
</body>
</html>
